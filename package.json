{
	"name": "vsc-go",
	"displayName": "ECode for Go",
	"description": "ECode for Go 优化了 Gopher 们的开发流程，包括快速构建及调试等。",
	"version": "0.0.2",
	"license": "MIT",
	"publisher": "eframework-org",
	"author": {
		"name": "EFramework",
		"email": "eframework-org@outlook.com",
		"url": "https://github.com/eframework-org"
	},
	"homepage": "https://eframework-org.github.io",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eframework-org/VSC.GO.git"
	},
	"bugs": {
		"url": "https://github.com/eframework-org/VSC.GO/issues"
	},
	"engines": {
		"vscode": "^1.50.0"
	},
	"icon": "res/logo.png",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"eframework",
		"ecode",
		"vscode",
		"go"
	],
	"activationEvents": [
		"workspaceContains:**/*.go",
		"onLanguage:go",
		"onDebugResolve:go"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "rm -rf dist && npm install && webpack --mode production",
		"debug": "tsc",
		"release": "rm -f *.vsix && vsce package"
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vsc-go",
					"title": "ECode for Go",
					"icon": "res/logo.svg"
				}
			]
		},
		"views": {
			"vsc-go": [
				{
					"id": "vsc-go.projectList",
					"name": "Projects"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vsc-go.editProject",
					"group": "navigation@1",
					"when": "view == vsc-go.projectList"
				},
				{
					"command": "vsc-go.showOutput",
					"group": "navigation@2",
					"when": "view == vsc-go.projectList"
				},
				{
					"command": "vsc-go.showCommand",
					"group": "navigation@3",
					"when": "view == vsc-go.projectList"
				}
			],
			"view/item/context": [
				{
					"command": "vsc-go.buildProject",
					"when": "view == vsc-go.projectList"
				},
				{
					"command": "vsc-go.startProject",
					"when": "view == vsc-go.projectList"
				},
				{
					"command": "vsc-go.stopProject",
					"when": "view == vsc-go.projectList"
				},
				{
					"command": "vsc-go.debugProject",
					"when": "view == vsc-go.projectList"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "vsc-go.projectList",
				"contents": "No projects was found."
			}
		],
		"commands": [
			{
				"command": "vsc-go.buildProject",
				"title": "Build Project(s)",
				"category": "ECode for Go",
				"icon": "$(archive)"
			},
			{
				"command": "vsc-go.startProject",
				"title": "Start Project(s)",
				"category": "ECode for Go",
				"icon": "$(run)"
			},
			{
				"command": "vsc-go.stopProject",
				"title": "Stop Project(s)",
				"category": "ECode for Go",
				"icon": "$(debug-stop)"
			},
			{
				"command": "vsc-go.debugProject",
				"title": "Debug Project(s)",
				"category": "ECode for Go",
				"icon": "$(debug-alt)"
			},
			{
				"command": "vsc-go.editProject",
				"title": "Edit Project(s)",
				"category": "ECode for Go",
				"icon": "$(gear)"
			},
			{
				"command": "vsc-go.showOutput",
				"title": "Show Output(s)",
				"category": "ECode for Go",
				"icon": "$(symbol-constant)"
			},
			{
				"command": "vsc-go.showCommand",
				"title": "Show Command(s)",
				"category": "ECode for Go",
				"icon": "$(more)"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ECode for Go",
			"properties": {
				"vsc-go.projectList": {
					"type": "object",
					"default": {
						"$name": {
							"base": {
								"arch": "[arm/arm64/amd64/386/etc.]",
								"os": "[windows/linux/darwin/etc.]",
								"scriptPath": "$(path/to/script)",
								"buildPath": "$(path/to/build)",
								"buildArgs": [],
								"buildCopy": [
									"$(path/to/copy)",
									"$(copy/from/path):$(to/path)"
								],
								"startArgs": [],
								"startDelay": 0.5,
								"stopDelay": 0.3,
								"stopPort": "$(./port/file)",
								"dlvFlags": [
									"--check-go-version=false"
								]
							},
							"debug.windows.amd64": {
								"extends": "base"
							},
							"release.windows.amd64": {
								"extends": "base",
								"buildArgs": [
									"-a",
									"-trimpath"
								]
							}
						}
					},
					"description": "配置项目参数的列表，支持按名称定义多个项目，并根据平台进行扩展继承。"
				}
			}
		}
	},
	"devDependencies": {
		"@types/glob": "7.2.0",
		"@types/mocha": "^2.2.32",
		"@types/node": "16.11.7",
		"@types/socket.io": "^1.4.27",
		"@types/socket.io-client": "^1.4.27",
		"@types/vscode": "^1.50.0",
		"@vscode/debugadapter": "^1.50.0",
		"@vscode/debugprotocol": "^1.50.0",
		"@vscode/vsce": "3.2.1",
		"glob": "8.0.1",
		"kill-port": "1.6.1",
		"mocha": "^2.3.3",
		"rd": "2.0.1",
		"ts-loader": "^5.3.3",
		"typescript": "4.1.6",
		"vscode-languageclient": "^5.1.0",
		"webpack": "5.84.1",
		"webpack-cli": "5.1.1",
		"org.eframework.uni.util": "0.0.2"
	}
}